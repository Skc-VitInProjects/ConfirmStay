<!-- using the boilerplate code -->
<% layout("/layouts/boilerplate") %>

     <body>
          <div class="row mt-3">
               <div class="col-8 offset-2">
                    <h2>
                         <%= listing.title %>
                    </h2>
               </div>
               <div class="card col-6 offset-2 show-card listing-card">
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                    <div class="card-body">

                         <p class="card-text">
                              <i><b>Owned By: </b><%= listing.owner.username %></i> </p>
                             
                              <p class="card-text">

                              <%= listing.description %>
                                   <br>
                                   &#8377; <%= listing.price.toLocaleString("en-IN") %>
                                        <br>
                                        <%= listing.location %>
                                             <br>
                                             <%= listing.country %>
                         </p>

                    </div>
               </div>
               
               <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                         <button class="btn btn-dark offset-6 delete-btn">Delete</button>
                    </form>
               </div>


               <!-- Review form -->
               <div class="col-8 offset-2 mb-3">
                    <hr>
                    <h5>Leave a Review</h5>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                         class="needs-validation">
                         <div class="mb-3 mt-3">
                              <label for="rating" class="form-label">Rating</label>
                              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                         </div>
                         <div class="mb-3 mt-3">
                              <label for="comment" class="form-label">Comments</label>
                              <textarea name="review[comment]" id="comment" cols="30" rows="7" class="form-control"
                                   required></textarea>
                              <div class="invalid-feedback">Please add some comments for review </div>
                         </div>
                         <button class="btn btn-outline-dark">Submit</button>
                    </form>

                    <hr />

                    <!-- Review will be displayed here after been added -->
                    <p><b>All Reviews</b></p>
                    <div class="row">
                    <% for(review of listing.reviews){ %>
                         <div class="card col-5 ms-3 mb-3">
                              <div class="card-body">
                                   <h5 class="card-title">Jane Doe</h5>
                                   <p class="card-text">
                                        <%= review.comment %>
                                   </p> 
                                   <p class="card-text">
                                        <%= review.rating %> stars
                                   </p>
                              </div>
                              <form class="mb-3 mt-1" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                   <button class = "btn btn-sm btn-dark">Delete</button>
                              </form>
                         </div>
                         <% } %>
                    </div>
               </div>
          </div>
     </body>